{
  "name": "luchat",
  "version": "0.0.1",
  "description": "",
  "main": "main/index.js",
  "scripts": {
    "build:renderer": "cross-env NODE_ENV=production webpack --config build/webpack.prod.js",
    "build:main": "electron-builder --win --x64",
    "dev:renderer": "cross-env NODE_ENV=development webpack-dev-server --open --config build/webpack.dev.js",
    "dev:main": "cross-env NODE_ENV=development electron ./",
    "dev": "concurrently 'npm run dev:renderer' 'npm run dev:main'",
    "serve": "npm run dev:renderer && npm run dev:main",
    "start": "node build/start.js"
  },
  "author": "LU",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "autoprefixer": "^9.2.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.4",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "electron": "^3.0.9",
    "file-loader": "^2.0.0",
    "happypack": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "html-withimg-loader": "^0.1.16",
    "mini-css-extract-plugin": "^0.4.4",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "os": "^0.1.1",
    "postcss": "^7.0.5",
    "postcss-loader": "^3.0.0",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "style-loader": "^0.23.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "url-loader": "^1.1.2",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.22.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "webpack-merge": "^4.1.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^0.18.0",
    "electron-updater": "^3.2.3",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vuetify": "^1.3.7",
    "vuex": "^3.0.1"
  },
  "build": {
    "appId": "luchat.app",
    "productName": "luchat",
    "icon": "./main/logo.ico",
    "directories": {
      "output": "package"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://192.168.11.101:8080"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "artifactName": "luchat-v${version}.${ext}",
      "allowToChangeInstallationDirectory": true
    }
  }
}
